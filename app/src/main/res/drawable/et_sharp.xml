<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置内边距 -->
    <padding
        android:left="15dp"
        android:right="15dp"
        android:top="10dp"
        android:bottom="10dp"  />
    <!-- 设置圆角矩形 -->
    <corners android:radius="25dp" />
    <!-- 输入框背景颜色 -->
    <solid android:color="@color/editTextBg"  ></solid>
    <!-- 外边框线的粗细及其颜色 -->
    <stroke
        android:width="3dp"
        android:color="@color/editTextStroke" >
    </stroke>
</shape>